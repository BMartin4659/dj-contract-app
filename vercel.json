{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "rm -rf node_modules package-lock.json && npm install && node ensure-components.js && node clear-cache.js"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY": "AIzaSyC-5o9YY4NS8y8F2ZTg8-zibHYRP_1dOEc",
    "VERCEL_DEPLOYMENT": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        },
        {
          "key": "Viewport",
          "value": "width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes"
        }
      ]
    }
  ],
  "functions": {
    "app/**/*.js": {
      "maxDuration": 30
    }
  }
} 